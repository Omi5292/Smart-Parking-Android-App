<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDFEFE"
    tools:context=".Addguest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="-20dp"
            android:layout_marginHorizontal="295dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="165dp"
            android:layout_marginRight="220dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-95dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="135dp"
            android:layout_marginTop="-160dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutinput4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layoutround"
        android:padding="20dp"
        android:elevation="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/edguestname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name"
        android:singleLine="true"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:drawableRight="@drawable/person_black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/edguestcon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Contact No:"
        android:singleLine="true"
        android:padding="15dp"
        android:inputType="phone"
        android:drawableRight="@drawable/phone_black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/edguestflat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Flat No:"
        android:singleLine="true"
        android:padding="15dp"
        android:inputType="textCapCharacters"
        android:drawableRight="@drawable/location_city"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/edguestvehi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Vehicle No:"
        android:padding="15dp"
        android:inputType="textCapCharacters"
        android:drawableRight="@drawable/directions_car"/>
        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnsubguest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/round"
        android:textColor="#FFFF"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guest Registration"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#424949"
        android:fontFamily="cursive"
        android:textSize="35dp"
        android:layout_marginTop="30dp"/>

</RelativeLayout>