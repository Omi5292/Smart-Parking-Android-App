<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDFEFE"
    tools:context=".Addagentdetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="-20dp"
            android:layout_marginHorizontal="295dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="165dp"
            android:layout_marginRight="220dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-95dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="135dp"
            android:layout_marginTop="-160dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen"/>
    </LinearLayout>    <!-- tinted balls design-->

    <LinearLayout
        android:id="@+id/layoutinput2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layoutround"
        android:padding="20dp"
        android:elevation="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:focusableInTouchMode="true">

        <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:singleLine="true"
                android:hint="Name"
                android:inputType="textPersonName"
                android:drawableRight="@drawable/person_black"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <EditText
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:singleLine="true"
                android:hint="Password"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true">

            <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/phone_black"
                    android:hint="Contact No"
                    android:inputType="phone"
                    android:padding="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true">

        <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Emai-ID (optional)"
                android:padding="15dp"
                android:inputType="textEmailAddress"
                android:drawableRight="@drawable/email_black"/>
        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnsubagent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#ffff"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"
        android:background="@drawable/round"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agent Registration"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#424949"
        android:fontFamily="cursive"
        android:textSize="35dp"
        android:layout_marginTop="30dp"/>

</RelativeLayout>