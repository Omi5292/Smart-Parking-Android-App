<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFEFE"
    tools:context=".Loginchoose">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textColor="#717D7E"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="50dp"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="-130dp"
            android:layout_marginHorizontal="295dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="165dp"
            android:layout_marginRight="220dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="-95dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="135dp"
            android:layout_marginTop="-150dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/trans"
            android:backgroundTint="#2E86C7"
            android:backgroundTintMode="screen"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutinput2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layoutround"
        android:padding="20dp"
        android:elevation="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authentication"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnadmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="ADMIN"
            android:onClick="login"
            android:elevation="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"
            android:textColor="#FFFF"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnclient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="AGENT"
            android:onClick="cust"
            android:elevation="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="25dp"
            android:textColor="#FFFF"
            android:textSize="20dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/about"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_info"
        android:background="@drawable/about"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>